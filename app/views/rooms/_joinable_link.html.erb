<% if current_user.has_joined_room(room) %>
  <%= link_to leave_room_path(room), method: :delete, data: {turbo: "false"} do %>
    <button class="btn btn-danger">leave room</button>
  <% end %>
<% else %>
  <%= link_to join_room_path(room), method: :delete, data: {turbo: "false"} do %>
<button class="btn btn-success">join room</button>
  <% end %>
<% end %>
