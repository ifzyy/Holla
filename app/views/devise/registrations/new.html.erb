<section class="vh-100" style=" background: url('http://forums.crackberry.com/attachments/blackberry-10-wallpapers-f308/137432d1361639896t-z10-wallpaper-set-z10-music.jpg')">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">

        <div class="card" style="border-radius: 1rem">
          
           
              <div class="card-body text-black">
                <%= form_for(resource, as: resource_name, url:
                registration_path(resource_name), html: {data: {turbo: false}},style:"background-color:
                #000000") do |f| %> <%= render "devise/shared/error_messages",
                resource: resource %>
                <div class="d-flex align-items-center mb-3 pb-1">
                  <i class="bi bi-chat-quote" style="color: #ff6219"></i>
                  <span class="h1 fw-bold mb-0" style="font-family: 'Shantell Sans', cursive;">Holla!</span>
                </div>

                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px">
                  Sign up
                </h5>
                <div class="form-outline mb-4">
                  <%= f.file_field :avatar, autofocus: true, autocomplete:
                  "email",id: "form2Example17", class:"form-control
                  form-control-lg" %> <%= f.label "profile image", class: "form-label"
                  %>
                </div>
                <div class="form-outline mb-4">
                  <%= f.text_field :username, autofocus: true, autocomplete:
                  "email",id: "form2Example17", class:"form-control
                  form-control-lg" %> <%= f.label :username, class: "form-label"
                  %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.email_field :email, autofocus: true, autocomplete:
                  "email",id: "form2Example17", class:"form-control
                  form-control-lg" %> <%= f.label :email, class: "form-label" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.password_field :password, autocomplete:
                  "current-password", id:"form2Example27" ,class: "form-control
                  form-control-lg" %> <%= f.label :password, class: "form-label"
                  %> <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>
                <div class="form-outline mb-4">
                  <%= f.password_field :password_confirmation, autocomplete:
                  "current-password", id:"form2Example27" ,class: "form-control
                  form-control-lg" %> <%= f.label :password_confirmation, class:
                  "form-label" %> <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>

                <div class="pt-1 mb-4">
                  <%= f.submit "Sign up",class: "btn btn-primary btn-lg
                  btn-block" %>
                </div>
                <%= link_to "Forgot password?",
                new_password_path(resource_name), class:"small text-muted" %>
                <p class="mb-5 pb-lg-2" style="color: #393f81">
                  Already have an account? <%= link_to "Log in",new_session_path(resource_name),style:"color:
                  #393f81"%>
                </p>
                <% end %>
              </div>
            </div>


    </div>
  </div>
</section>
